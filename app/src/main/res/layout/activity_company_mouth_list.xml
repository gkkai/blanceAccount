<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kk.blanceaccount.CompanyMouthListActivity">
    <RelativeLayout style="@style/ActionBar"
        android:background="@color/backgroud"
        >

        <ImageView style="@style/ActionBar.LeftImage"
            android:background="@color/backgroud"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/back_withe"/>

        <TextView
            android:textColor="@color/white_ffffff"
            android:background="@color/backgroud"
            android:textSize="19sp"
            android:layout_width="150dp"
            android:ellipsize="middle"
            android:singleLine="true"
            android:id="@+id/tv_title_train"
            style="@style/ActionBar.CenterTitle"
            android:text="公司名称公司名称公司名称公司名称" />
        <Spinner

            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:id="@+id/spinner_year"
            android:layout_centerVertical="true"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:spinnerMode="dropdown"
            android:dropDownWidth="70dp"
            android:requiresFadingEdge="none"
            android:dropDownVerticalOffset="40dp"
            android:background="#0000"
            />

    </RelativeLayout>
    <View
        android:background="@color/colorGrayLine"
        android:layout_marginTop="48dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"></View>

    <widget.XListView
        android:layout_marginTop="50dp"
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:divider="@color/colorGrayLine"
        android:dividerHeight="1dp"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"
        android:scrollingCache="false"
        ></widget.XListView>
</RelativeLayout>
