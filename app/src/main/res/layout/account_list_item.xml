<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/shape_account_list_item"
    >
    <ImageView
        android:id="@+id/image_account_status"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:background="@mipmap/account_project_item_green"/>
    <TextView
        android:textColor="#222222"
    android:textSize="22sp"
    android:layout_marginLeft="60dp"
    android:layout_centerVertical="true"
    android:text="1月"
    android:id="@+id/tv_acconut_list_mouth"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <TextView
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:layout_marginLeft="110dp"
        android:text="神南产业发展有限公司神南产业发展有限公司"
        android:id="@+id/tv_acconut_list_company_a"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:singleLine="true"
        android:textColor="#444444"
        android:ellipsize="end"
        />
    <TextView
        android:gravity="center_vertical"
        android:layout_below="@id/tv_acconut_list_company_a"
        android:textSize="15sp"
        android:layout_marginLeft="110dp"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:textColor="#444444"
        android:ellipsize="end"
        android:text="神木红柳林矿业有限公司"
        android:id="@+id/tv_acconut_list_company_b"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />

</RelativeLayout>