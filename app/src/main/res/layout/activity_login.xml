<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kk.blanceaccount.LoginActivity">
    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@mipmap/logo2"
        android:layout_width="90dp"
        android:layout_height="90dp" />
    <TextView
        android:textColor="#222222"
        android:textSize="19sp"
        android:gravity="center"
        android:layout_marginTop="190dp"
        android:text="业务链"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

<EditText
    android:id="@+id/et_phone"
    android:hint="手机号码"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="270dp"
    android:layout_width="280dp"
    android:layout_height="40dp"
    android:background="@android:color/transparent"
    android:maxLength="11"
    android:textCursorDrawable="@drawable/exittext"
    android:textColor="@color/colorTextDefault"
    android:textSize="@dimen/textSize_14sp"
    android:textColorHint="@color/colorGrayLine"/>
    <View
        android:layout_width="280dp"
        android:layout_centerHorizontal="true"
        android:layout_height="0.5dp"
        android:layout_marginTop="310dp"
        android:background="@color/color_a5a5a5"
        ></View>
    <EditText
        android:id="@+id/et_pwd"
        android:inputType="textPassword"
        android:hint="密码"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:textSize="@dimen/textSize_14sp"
        android:drawablePadding="@dimen/margin_8dp"
        android:textCursorDrawable="@drawable/exittext"
        android:textColor="@color/colorTextDefault"
        android:textColorHint="@color/colorGrayLine"
        android:layout_alignBottom="@+id/view"
        android:layout_alignStart="@+id/view" />

    <View
        android:layout_width="280dp"
        android:layout_centerHorizontal="true"
        android:layout_height="0.5dp"
        android:layout_marginTop="360dp"
        android:background="@color/color_a5a5a5"
        android:id="@+id/view"></View>










    <TextView
        android:id="@+id/tv_login"
        android:textColor="@color/white_ffffff"
        android:textSize="17sp"
        android:gravity="center"
        android:text="登录"
        android:background="@mipmap/login2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="380dp"
        android:layout_width="300dp"
        android:layout_height="70dp" />


</RelativeLayout>
