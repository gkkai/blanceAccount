<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kk.blanceaccount.SetPwdActivity">
    <RelativeLayout style="@style/ActionBar"
        android:background="@color/backgroud">

        <ImageView style="@style/ActionBar.LeftImage"
            android:background="@color/backgroud"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

        <TextView
            android:textColor="@color/white_ffffff"
            android:textSize="19sp"
            android:id="@+id/tv_title_train"
            style="@style/ActionBar.CenterTitle"
            android:text="修改密码" />

    </RelativeLayout>
    <EditText
        android:id="@+id/et_new_pwd"
        android:hint="新密码"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:maxLength="11"
        android:textColor="@color/colorTextDefault"
        android:textSize="@dimen/textSize_14sp"
        android:textColorHint="@color/colorGrayLine"/>
    <View
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="0.5dp"
        android:layout_marginTop="160dp"
        android:background="@color/color_a5a5a5"
        ></View>
    <EditText
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/et_pwd"
        android:inputType="textPassword"
        android:hint="再次确认密码"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:textSize="@dimen/textSize_14sp"
        android:drawablePadding="@dimen/margin_8dp"
        android:textColor="@color/colorTextDefault"
        android:textColorHint="@color/colorGrayLine"
         />

    <View
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="0.5dp"
        android:layout_marginTop="221dp"
        android:background="@color/color_a5a5a5"
        ></View>





    <TextView
        android:textColor="@color/backgroud"
        android:textSize="15sp"

        android:text="密码长度最少六位"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />




    <TextView
        android:id="@+id/tv_login"
        android:textColor="@color/white_ffffff"
        android:textSize="17sp"
        android:gravity="center"
        android:text="确认"
        android:background="@mipmap/login2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"
        android:layout_width="300dp"
        android:layout_height="70dp" />
</RelativeLayout>
