<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kk.blanceaccount.SettingActivity">
    <RelativeLayout style="@style/ActionBar"
        android:background="@color/backgroud">

        <ImageView style="@style/ActionBar.LeftImage"
            android:background="@color/backgroud"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

        <TextView
            android:textColor="@color/white_ffffff"
            android:textSize="19sp"
            android:id="@+id/tv_title_train"
            style="@style/ActionBar.CenterTitle"
            android:text="设置" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_setpwd"
        android:layout_marginTop="48dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView

            android:paddingLeft="20dp"

            android:textColor="#222222"
            android:text="修改密码"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/next"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </RelativeLayout>

    <View
        android:background="@color/colorGrayLine"
        android:layout_marginTop="98dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <TextView
        android:id="@+id/text_next"
        android:paddingLeft="20dp"
        android:layout_marginTop="99dp"
        android:textColor="@color/backgroud"
        android:text="退出登录"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <View
        android:background="@color/colorGrayLine"
        android:layout_marginTop="149dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
</RelativeLayout>
